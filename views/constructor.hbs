<!DOCTYPE html>
<html lang="ru">
<head>
  {{> head}}
</head>
<body>
{{> header}}

{{#> content-shell}}
<section id="section_constructor" class="section section_constructor">
  <h3 class="section_title">Schedule Constructor</h3>

  <form id="scheduleForm">
    <label for="days">Choose num of days:</label>
    <select id="days" name="days">
      <option value="5">5 days</option>
      <option value="6">6 days</option>
    </select>

    <label for="lessons">Max activities:</label>
    <input type="number" id="lessons" name="lessons" min="1" max="10" value="5">

    <label for="language">Choose language:</label>
    <select id="language" name="language">
      <option value="ru">Русский</option>
      <option value="en">English</option>
    </select>

    <button type="submit">Generate</button>
  </form>

  <div id="scheduleResult"></div>
</section>
{{/content-shell}}

{{> footer}}
</body>
</html>
